{
    "openapi": "3.0.0",
    "components": {
        "examples": {},
        "headers": {},
        "parameters": {},
        "requestBodies": {},
        "responses": {},
        "schemas": {
            "Authenticated": {
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "accessToken": {
                        "type": "string"
                    }
                },
                "required": [
                    "name",
                    "accessToken"
                ],
                "type": "object",
                "additionalProperties": false
            },
            "Email": {
                "type": "string",
                "format": "email",
                "pattern": ".+@.+"
            },
            "Credentials": {
                "properties": {
                    "email": {
                        "$ref": "#/components/schemas/Email"
                    },
                    "password": {
                        "type": "string"
                    }
                },
                "required": [
                    "email",
                    "password"
                ],
                "type": "object",
                "additionalProperties": false
            }
        },
        "securitySchemes": {
            "jwt": {
                "type": "http",
                "scheme": "bearer",
                "scopes": {
                    "member": "member",
                    "admin": "admin"
                }
            }
        }
    },
    "info": {
        "title": "discord-2.0-backend",
        "version": "1.0.0",
        "license": {
            "name": "ISC"
        },
        "contact": {}
    },
    "paths": {
        "/login": {
            "post": {
                "operationId": "Login",
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/Authenticated"
                                        }
                                    ],
                                    "nullable": true
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                },
                "security": [],
                "parameters": [],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Credentials"
                            }
                        }
                    }
                }
            }
        }
    },
    "servers": [
        {
            "url": "/api/v0"
        }
    ]
}
